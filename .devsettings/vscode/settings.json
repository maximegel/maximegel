{
  // #region ### Text Editor ###
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.matchBrackets": "never",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80
  ],
  // ## Font
  "editor.fontFamily": "'Fira Code', 'Cascadia Code', Consolas, 'Courier New', monospace, 'Segoe UI Emoji'",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.fontWeight": "500",
  // ## Formatting
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  // ## Diff Editor
  "diffEditor.renderSideBySide": false,
  // ## Minimap
  "editor.minimap.enabled": false,
  // ## Suggestions
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.suggest.insertMode": "replace",
  "editor.suggestSelection": "first",
  // ## Files
  "files.autoSave": "off",
  // #endregion
  // #region ### Workbench ###
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  // #endregion
  // #region ### Features ###
  // ## Explorer
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  // ## Terminal
  "terminal.external.windowsExec": "wt",
  // #endregion
  // #region ### Extensions ###
  // ## Emmet
  "emmet.triggerExpansionOnTab": true,
  // ## Git
  "git.autofetch": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  // ## Git Graph
  "git-graph.dialog.createBranch.checkOut": true,
  // ## GitLens
  "gitlens.keymap": "none",
  // ## Merge Conflict
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  // ## Remote - Containers
  "remote.containers.executeInWSL": true,
  // ## Settings Cycler
  "settings.cycle": [
    {
      "id": "colorTheme",
      "values": [
        {
          "workbench.colorTheme": "Default Dark+"
        },
        {
          "workbench.colorTheme": "Default Light+"
        }
      ]
    },
    {
      "id": "lineNumbers",
      "values": [
        {
          "editor.lineNumbers": "on"
        },
        {
          "editor.lineNumbers": "relative"
        }
      ]
    },
    {
      "id": "lineNumbersOn",
      "values": [
        {
          "editor.lineNumbers": "on"
        }
      ]
    },
    {
      "id": "lineNumbersRelative",
      "values": [
        {
          "editor.lineNumbers": "relative"
        }
      ]
    }
  ],
  // ## TODO Highlight
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "black",
      "backgroundColor": "#9cdcfe",
      "overviewRulerColor": "#9cdcfe"
    },
    {
      "text": "FIXME:",
      "color": "black",
      "backgroundColor": "#c586c0",
      "overviewRulerColor": "#c586c0"
    },
    {
      "text": "NOTE:",
      "backgroundColor": "#5eceB7",
      "overviewRulerColor": "#5eceB7"
    },
    {
      "text": "HACK:",
      "backgroundColor": "#dcdcaa",
      "overviewRulerColor": "#dcdcaa"
    }
  ],
  "todohighlight.defaultStyle": {
    "color": "#000000"
  },
  // ## Typescript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // ## Vim
  "vim.camelCaseMotion.enable": true,
  "vim.easymotion": true,
  "vim.easymotionIncSearchForegroundColor": "#000000",
  "vim.easymotionJumpToAnywhereRegex": "^\\s*[\\w<\"#\\.@]|(?<=[{\\(])[\\w-_\\$]",
  "vim.easymotionKeys": "arstdhneiofplu",
  "vim.easymotionMarkerBackgroundColor": "#ce9178",
  "vim.easymotionMarkerForegroundColorOneChar": "#000000",
  "vim.easymotionMarkerForegroundColorTwoCharFirst": "#000000",
  "vim.easymotionMarkerForegroundColorTwoCharSecond": "#000000",
  "vim.leader": "<space>",
  "vim.sneak": true,
  "vim.useCtrlKeys": false,
  "vim.useSystemClipboard": true,
  "vim.insertModeKeyBindings": [],
  "vim.insertModeKeyBindingsNonRecursive": [
    // # Settings Cycler: Set Line Numbers to "relative"
    {
      "before": [
        "<Esc>"
      ],
      "after": [
        "<Esc>"
      ],
      "commands": [
        "settings.cycle.lineNumbersRelative"
      ]
    }
  ],
  "vim.normalModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    // # Easymotion: Jump to Anywhere
    {
      "before": [
        "<leader>",
        "f"
      ],
      "after": [
        "<leader>",
        "<leader>",
        "<leader>",
        "j"
      ]
    },
    // # Settings Cycler: Set Line Numbers to "on"
    {
      "before": [
        "a"
      ],
      "after": [
        "a"
      ],
      "commands": [
        "settings.cycle.lineNumbersOn"
      ]
    },
    {
      "before": [
        "i"
      ],
      "after": [
        "i"
      ],
      "commands": [
        "settings.cycle.lineNumbersOn"
      ]
    }
  ],
  "vim.visualModeKeyBindings": [],
  "vim.visualModeKeyBindingsNonRecursive": [],
  // ## YAML
  "redhat.telemetry.enabled": false
  // #endregion
}